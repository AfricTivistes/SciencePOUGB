
---
import { Image } from "astro:assets";

// Import dynamique des images de logo
const logoFiles = await Astro.glob('/src/assets/images/logo/*.jpeg');
---

<section class="clients-section py-8 md:py-12">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-wrap justify-center items-center gap-4">
      {logoFiles.slice(0, 17).map((logoModule, index) => (
        <div class="px-3 my-3 flex items-center justify-center h-[60px]">
          <Image
            src={logoModule.default}
            alt={`Logo partenaire ${index + 1}`}
            width={100}
            height={60}
            class="max-h-[60px] w-auto object-contain"
            loading="lazy"
          />
        </div>
      ))}
    </div>
  </div>
</section>
