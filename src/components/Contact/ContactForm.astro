
---
import { Icon } from 'astro-icon/components';
import siteData from '@config/siteData.json';
import { Image } from 'astro:assets';
import contactImage from '../../assets/event/12.jpg';
---

<section class="section-container bg-white">
  <div class="container px-4 mx-auto">
    <div class="grid grid-cols-12 py-6">
      <div class="col-span-12 lg:col-span-5">
        <div
          class="bg-white rounded-2xl border-[25px] border-[#F4F7FD] p-6 md:p-12 shadow-md"
        >
          <h2 class="section-title mb-4">Contactez-nous</h2>
          <p class="text-lg text-base-700 mb-10">Envoyez-nous un message pour toute question ou information.</p>

          <form class="">
            <div class="mb-4">
              <input
                type="text"
                class="min-h-[48px] leading-[48px] bg-[#F2F6FD] border border-transparent rounded-lg focus:outline-none focus:border focus:border-primary-400 w-full px-5"
                placeholder="Votre nom"
              />
            </div>
            <div class="mb-4">
              <input
                type="email"
                class="min-h-[48px] leading-[48px] bg-[#F2F6FD] border border-transparent rounded-lg focus:outline-none focus:border focus:border-primary-400 w-full px-5"
                placeholder="Votre email"
              />
            </div>
            <div class="mb-4">
              <textarea
                name="message"
                class="min-h-[48px] leading-[48px] bg-[#F2F6FD] border border-transparent rounded-lg focus:outline-none focus:border focus:border-primary-400 w-full px-5"
                placeholder="Votre message"
                rows="4"
              ></textarea>
            </div>
            <div class="text-start">
              <button type="submit" class="bg-primary-600 hover:bg-primary-700 text-white px-6 py-3 rounded-lg mb-4 font-medium transition duration-300">
                Envoyer
              </button>
            </div>
          </form>
        </div>
      </div>
      <div class="col-span-12 lg:col-span-6 lg:col-start-7 order-2 mb-4 lg:mb-0">
        <div class="min-h-[150px] w-full h-full relative">
          <Image 
            src={contactImage}
            alt="Image de contact Club Science Politique" 
            width={600}
            height={400}
            class="w-full h-full object-cover absolute z-0"
          />
          <div class="flex flex-col justify-center h-full -ml-14 relative z-10">
            <div class="bg-gray-100 shadow-md max-w-[350px] mt-6 flex items-center rounded-lg p-5">
              <Icon name="tabler:info-circle" class="w-8 h-8 text-primary-600" />
              <a class="text-lg font-medium ml-4 text-base-800" href={`mailto:${siteData.author.email}`}>{siteData.author.email}</a>
            </div>
            <div class="bg-gray-100 shadow-md max-w-[350px] mt-6 flex items-center rounded-lg p-5">
              <Icon name="tabler:category" class="w-8 h-8 text-primary-600" />
              <span class="text-lg font-medium ml-4 text-base-800">Universit√© Gaston Berger, Saint-Louis</span>
            </div>
            <div class="bg-gray-100 shadow-md max-w-[350px] mt-6 flex items-center rounded-lg p-5">
              <Icon name="tabler:calendar-event" class="w-8 h-8 text-primary-600" />
              <span class="text-lg font-medium ml-4 text-base-800">Horaires: Lun-Ven, 9h-17h</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
