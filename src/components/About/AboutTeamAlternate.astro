const experts = [
  {
    name: "Pr. Amadou Diop",
    role: "Professeur / Encadreur",
    description: "Spécialiste en relations internationales et géopolitique africaine.",
    image: profilImage,
    alt: "Photo du professeur Amadou Diop",
    social: [
      { name: "facebook", url: "#" },
      { name: "linkedin", url: "#" },
      { name: "twitter", url: "#" }
    ]
  },
  {
    name: "Dr. Fatou Sow",
    role: "Maître de conférences",
    description: "Spécialiste en politiques publiques et développement institutionnel.",
    image: profilImage,
    alt: "Photo de Mme Fatou Sow",
    social: [
      { name: "facebook", url: "#" },
      { name: "linkedin", url: "#" },
      { name: "twitter", url: "#" }
    ]
  },
  {
    name: "Dr. Omar Ba",
    role: "Chargé de recherche",
    description: "Expert en science politique comparée et systèmes électoraux africains.",
    image: profilImage,
    alt: "Photo de M. Omar Ba",
    social: [
      { name: "facebook", url: "#" },
      { name: "linkedin", url: "#" },
      { name: "twitter", url: "#" }
    ]
  },
  {
    name: "Dr. Aïssatou Diallo",
    role: "Responsable pédagogique",
    description: "Spécialiste en sociologie politique et mouvements sociaux ouest-africains.",
    image: profilImage,
    alt: "Photo de Mme Aïssatou Diallo",
    social: [
      { name: "facebook", url: "#" },
      { name: "linkedin", url: "#" },
      { name: "twitter", url: "#" }
    ]
  },
  {
    name: "M. Cheikh Ndiaye",
    role: "Doctorant chercheur",
    description: "Chercheur sur les politiques de développement et la gouvernance locale.",
    image: profilImage,
    alt: "Photo de M. Cheikh Ndiaye",
    social: [
      { name: "facebook", url: "#" },
      { name: "linkedin", url: "#" },
      { name: "twitter", url: "#" }
    ]
  },
  {
    name: "Mme Aminata Sidibé",
    role: "Assistante de recherche",
    description: "Spécialiste des relations internationales et de la diplomatie africaine.",
    image: profilImage,
    alt: "Photo de Mme Aminata Sidibé",
    social: [
      { name: "facebook", url: "#" },
      { name: "linkedin", url: "#" },
      { name: "twitter", url: "#" }
    ]
  }
];
---

<section class="about-team-alternate py-14 md:py-24 text-base-900">
  <div class="container px-4 mx-auto">
    <div class="flex justify-center mb-6 md:mb-12">
      <div class="sm:max-w-md text-center">
        <h2 class="text-3xl leading-none font-bold md:text-4xl mb-4 text-primary-600">Notre Équipe d'Experts</h2>
        <p class="opacity-80">Les spécialistes qui animent notre club et contribuent à son rayonnement académique.</p>
      </div>
    </div>
    <div class="grid grid-cols-6 gap-6">
      {experts.map(expert => (
        <div class="col-span-6 md:col-span-3 lg:col-span-2 flex">
          <div class="mr-4">
            <Image
              src={expert.image}
              alt={expert.alt}
              width={120}
              height={120}
              class="max-w-full h-auto rounded"
            />
          </div>
          <div class="about-team-alternate-content">
            <h4 class="text-2xl font-medium mb-2 text-primary-600">{expert.name}</h4>
            <h6 class="font-medium">{expert.role}</h6>
            <p class="opacity-70 mb-0">{expert.description}</p>
            <div class="mt-4 flex space-x-4">
              {expert.social.map(socialItem => (
                <a
                  href={socialItem.url}
                  class="text-primary-600 opacity-70 transition duration-300 hover:opacity-100"
                  aria-label={socialItem.name}
                >
                  <Icon name={`tabler:brand-${socialItem.name}`} class="w-5 h-5" />
                </a>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>