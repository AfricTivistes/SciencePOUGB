// Définition des données des experts
const experts = [
  {
    name: "PAPA SAMBA NDIAYE",
    role: "DIRECTEUR UFR SCIENCES JURIDIQUES ET POLITIQUES",
    description: "Spécialiste en droit constitutionnel et relations internationales avec plus de 20 ans d'expérience dans la recherche et l'enseignement.",
    image: profilImage,
    alt: "Photo du directeur Papa Samba Ndiaye",
    social: [
      { name: "facebook", url: "#" },
      { name: "linkedin", url: "#" },
      { name: "twitter", url: "#" }
    ]
  },
  {
    name: "ALASSANE NDAO",
    role: "CHEF DE DÉPARTEMENT",
    description: "Expert en science politique africaine et en systèmes de gouvernance. Ses recherches portent sur les transitions démocratiques en Afrique de l'Ouest.",
    image: profilImage,
    alt: "Photo du chef de département Alassane Ndao",
    social: [
      { name: "facebook", url: "#" },
      { name: "linkedin", url: "#" },
      { name: "twitter", url: "#" }
    ]
  },
  {
    name: "Ibrahima SILLA",
    role: "Professeur",
    description: "Chercheur reconnu dans le domaine des politiques publiques et du développement territorial. Auteur de nombreux ouvrages sur la décentralisation.",
    image: profilImage,
    alt: "Photo du professeur Ibrahima Silla",
    social: [
      { name: "facebook", url: "#" },
      { name: "linkedin", url: "#" },
      { name: "twitter", url: "#" }
    ]
  },
  {
    name: "El Hadji Mamadou MBAYE",
    role: "Professeur",
    description: "Spécialiste des relations internationales et de la géopolitique africaine. Ses travaux portent sur l'intégration régionale et les enjeux sécuritaires.",
    image: profilImage,
    alt: "Photo du professeur El Hadji Mamadou Mbaye",
    social: [
      { name: "facebook", url: "#" },
      { name: "linkedin", url: "#" },
      { name: "twitter", url: "#" }
    ]
  },
  {
    name: "El hadji Bouré DIOUF",
    role: "Professeur",
    description: "Expert en sociologie politique et mouvements sociaux. Ses recherches s'intéressent aux dynamiques de mobilisation collective et à l'activisme en Afrique.",
    image: profilImage,
    alt: "Photo du professeur El hadji Bouré Diouf",
    social: [
      { name: "facebook", url: "#" },
      { name: "linkedin", url: "#" },
      { name: "twitter", url: "#" }
    ]
  },
  {
    name: "Maurice Soudieck DIONE",
    role: "Professeur",
    description: "Chercheur spécialisé dans l'analyse des processus électoraux et des institutions politiques en Afrique francophone. Consultant auprès d'organisations internationales.",
    image: profilImage,
    alt: "Photo du professeur Maurice Soudieck Dione",
    social: [
      { name: "facebook", url: "#" },
      { name: "linkedin", url: "#" },
      { name: "twitter", url: "#" }
    ]
  }
];
---

<section class="about-team-alternate py-14 md:py-24 text-base-900">
  <div class="container px-4 mx-auto">
    <div class="flex justify-center mb-6 md:mb-12">
      <div class="sm:max-w-md text-center">
        <h2 class="text-3xl leading-none font-bold md:text-4xl mb-4 text-primary-600">Notre Équipe d'Experts</h2>
        <p class="opacity-80">Les spécialistes qui animent notre club et contribuent à son rayonnement académique.</p>
      </div>
    </div>
    <div class="grid grid-cols-6 gap-6">
      {experts.map(expert => (
        <div class="col-span-6 md:col-span-3 lg:col-span-2 flex">
          <div class="mr-4">
            <Image
              src={expert.image}
              alt={expert.alt}
              width={120}
              height={120}
              class="max-w-full h-auto rounded"
            />
          </div>
          <div class="about-team-alternate-content">
            <h4 class="text-2xl font-medium mb-2 text-primary-600">{expert.name}</h4>
            <h6 class="font-medium">{expert.role}</h6>
            <p class="opacity-70 mb-0">{expert.description}</p>
            <div class="mt-4 flex space-x-4">
              {expert.social.map(socialItem => (
                <a
                  href={socialItem.url}
                  class="text-primary-600 opacity-70 transition duration-300 hover:opacity-100"
                  aria-label={socialItem.name}
                >
                  <Icon name={`tabler:brand-${socialItem.name}`} class="w-5 h-5" />
                </a>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>